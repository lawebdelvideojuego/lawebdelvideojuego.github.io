<article class="feed-item bluesky-card">
  <div class="card-header">
    <svg class="bluesky-icon" viewBox="0 0 600 530" xmlns="http://www.w3.org/2000/svg">
      <path d="m135.72 44.03c66.496 49.921 138.02 151.14 164.28 205.46 26.262-54.316 97.782-155.54 164.28-205.46 47.98-36.021 125.72-63.892 125.72 24.795 0 17.712-10.155 148.79-16.111 170.07-20.703 73.984-96.144 92.854-163.25 81.433 117.3 19.964 147.14 86.092 82.697 152.22-122.39 125.59-175.91-31.511-189.63-71.766-2.514-7.3797-3.6904-10.832-3.7077-7.8964-0.0174-2.9357-1.1937 0.51669-3.7077 7.8964-13.714 40.255-67.233 197.36-189.63 71.766-64.444-66.128-34.605-132.26 82.697-152.22-67.108 11.421-142.55-7.4491-163.25-81.433-5.9562-21.282-16.111-152.36-16.111-170.07 0-88.687 77.742-60.816 125.72-24.795z"/>
    </svg>
    <time datetime="{{ item.date }}">{{ item.date | shortDate }}</time>
    <span>&middot; @{{ site.bluesky }}</span>
  </div>
  <p class="card-text">{{ item.text }}</p>

  {% if item.embed %}
    {% if item.embed.type == "external" %}
    <a href="{{ item.embed.uri }}" class="embed-card" target="_blank" rel="noopener">
      {% if item.embed.thumb %}
      <img src="{{ item.embed.thumb }}" alt="{{ item.embed.title }}" class="embed-card__thumb" loading="lazy">
      {% endif %}
      <div class="embed-card__content">
        <span class="embed-card__title">{{ item.embed.title }}</span>
        {% if item.embed.description %}
        <span class="embed-card__desc">{{ item.embed.description | truncate(100) }}</span>
        {% endif %}
        <span class="embed-card__domain">{{ item.embed.uri | replace("https://", "") | replace("http://", "") | replace("www.", "") | truncate(30) }}</span>
      </div>
    </a>
    {% endif %}

    {% if item.embed.type == "images" %}
    <div class="embed-images {% if item.embed.images.length > 1 %}embed-images--grid{% endif %}">
      {% for img in item.embed.images %}
      <img src="{{ img.thumb }}" alt="{{ img.alt }}" class="embed-images__img" loading="lazy">
      {% endfor %}
    </div>
    {% endif %}
  {% endif %}

  <a href="{{ item.url }}" class="card-link" target="_blank" rel="noopener">Ver en Bluesky &rarr;</a>
</article>
